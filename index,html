  <!-- Product Section -->
  <section id="product-section"></section>

  <!-- JavaScript for Interactivity -->
  <script>
    const products = {
      fashion: [
        {
          name: "Stylish Jacket",
          price: "₹1,999",
          details: "Warm and trendy jacket for winter wear.",
          img: "https://via.placeholder.com/300x200?text=Jacket"
        },
        {
          name: "Classic Jeans",
          price: "₹1,299",
          details: "Comfort-fit, high-quality denim jeans.",
          img: "https://via.placeholder.com/300x200?text=Jeans"
        }
      ],
      home: [
        {
          name: "Decorative Lamp",
          price: "₹899",
          details: "Modern LED lamp for cozy lighting.",
          img: "https://via.placeholder.com/300x200?text=Lamp"
        },
        {
          name: "Wall Art Frame",
          price: "₹499",
          details: "Stylish art frame to elevate interiors.",
          img: "https://via.placeholder.com/300x200?text=Wall+Art"
        }
      ],
      beauty: [
        {
          name: "Herbal Face Cream",
          price: "₹699",
          details: "Made with natural ingredients for glowing skin.",
          img: "https://via.placeholder.com/300x200?text=Face+Cream"
        },
        {
          name: "Lipstick Combo",
          price: "₹399",
          details: "Set of 3 shades with matte finish.",
          img: "https://via.placeholder.com/300x200?text=Lipstick"
        }
      ],
      kids: [
        {
          name: "Cartoon T-Shirt",
          price: "₹299",
          details: "Soft cotton T-shirt with fun designs.",
          img: "https://via.placeholder.com/300x200?text=T-shirt"
        },
        {
          name: "Building Blocks Set",
          price: "₹599",
          details: "Educational toy for kids aged 3+.",
          img: "https://via.placeholder.com/300x200?text=Blocks"
        }
      ]
    };

    const section = document.getElementById("product-section");
    const navButtons = document.querySelectorAll("nav button");

    function renderProducts(category) {
      section.innerHTML = '';
      const items = category === 'all'
        ? Object.values(products).flat()
        : products[category] || [];

      items.forEach(item => {
        const card = document.createElement("div");
        card.className = "product-card";
        card.innerHTML = `
          <img src="${item.img}" alt="${item.name}">
          <div class="product-info">
            <h3>${item.name}</h3>
            <p>${item.details}</p>
            <p class="price">${item.price}</p>
          </div>
        `;
        section.appendChild(card);
      });
    }

    navButtons.forEach(button => {
      button.addEventListener("click", () => {
        const category = button.dataset.category;
        renderProducts(category);
      });
    });

    // Load all products on first load
    window.onload = () => renderProducts('all');
  </script>

</body>
