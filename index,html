  <!-- Hero Section -->
  <section class="hero">
    <h1>Browse the Latest Collections</h1>
    <p>Find quality pieces at affordable prices – Fashion, Home, Beauty, Kids & more</p>
  </section>

  <!-- Products Section -->
  <section id="product-section"></section>

  <!-- JavaScript -->
  <script>
    const products = {
      fashion: [
        {
          name: "Denim Jacket",
          price: "₹1,999",
          details: "Trendy jacket for casual wear.",
          img: "https://via.placeholder.com/300x200?text=Denim+Jacket"
        },
        {
          name: "Formal Shirt",
          price: "₹1,199",
          details: "Perfect for office or formal events.",
          img: "https://via.placeholder.com/300x200?text=Formal+Shirt"
        }
      ],
      home: [
        {
          name: "Table Lamp",
          price: "₹799",
          details: "Modern lamp with LED lighting.",
          img: "https://via.placeholder.com/300x200?text=Table+Lamp"
        },
        {
          name: "Wall Frame",
          price: "₹499",
          details: "Artistic frame for home decor.",
          img: "https://via.placeholder.com/300x200?text=Wall+Frame"
        }
      ],
      beauty: [
        {
          name: "Face Serum",
          price: "₹899",
          details: "Glowing skin with herbal ingredients.",
          img: "https://via.placeholder.com/300x200?text=Face+Serum"
        },
        {
          name: "Lipstick Set",
          price: "₹499",
          details: "Matte finish in 3 shades.",
          img: "https://via.placeholder.com/300x200?text=Lipstick+Set"
        }
      ],
      kids: [
        {
          name: "Cartoon Tee",
          price: "₹299",
          details: "Fun prints for kids aged 4-8.",
          img: "https://via.placeholder.com/300x200?text=Cartoon+Tee"
        },
        {
          name: "Puzzle Blocks",
          price: "₹599",
          details: "Boosts creativity and learning.",
          img: "https://via.placeholder.com/300x200?text=Puzzle+Blocks"
        }
      ]
    };

    const productSection = document.getElementById("product-section");

    function displayProducts(category) {
      productSection.innerHTML = "";

      const items = category === "all"
        ? Object.values(products).flat()
        : products[category] || [];

      items.forEach(item => {
        const card = document.createElement("div");
        card.className = "product-card";
        card.innerHTML = `
          <img src="${item.img}" alt="${item.name}" />
          <div class="product-info">
            <h3>${item.name}</h3>
            <p>${item.details}</p>
            <p class="price">${item.price}</p>
          </div>
        `;
        productSection.appendChild(card);
      });
    }

    // Initial load
    window.onload = () => displayProducts("all");

    // Category filters
    document.querySelectorAll("nav button").forEach(btn => {
      btn.addEventListener("click", () => {
        displayProducts(btn.dataset.category);
      });
    });
  </script>

</body>
